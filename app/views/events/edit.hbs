<div ng-hide="showForm">
  <h1>Edit Event</h1>

  <form class="form-horizontal" ng-submit="updateEvent()">
    <input type="hidden" ng-model="editEventModel._id" value="{!{_id}}">
    <div class="form-group">
      <label class="col-md-3 control-label">Title</label>
      <div class="col-md-9">
        <input type="text" class="form-control" ng-model="editEventModel.title" value="{!{title}}" placeholder="What will you be doing?" >
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">From</label>
      <div class="col-md-9">
        <input type="text" class="form-control" id="editEventFrom" ng-model="editEventModel.from" value="{!{from}}" placeholder="Pick a date and time.">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">To</label>
      <div class="col-md-9">
        <input type="text" class="form-control" id="editEventTo" ng-model="editEventModel.to" value="{!{to}}" placeholder="Pick a date and time.">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">Location</label>
      <div class="col-md-9">
        <input type="text" class="form-control" ng-model="editEventModel.location" value="{!{location}}" placeholder="Where will it be?">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">Description</label>
      <div class="col-md-9">
        <input type="text" class="form-control" ng-model="editEventModel.description" value="{!{description}}" placeholder="Any important details?">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">Participants</label>
      <div class="col-md-9">
        <input type="text" class="form-control" ng-model="editEventModel.participants" value="{!{participants}}" placeholder="Use commas to separate participants">
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-3 col-md-3">
        <button type="submit" class="btn">Submit</button>
      </div>
      <div class="col-md-offset-3 col-md-3 text-right">
        <button type="button" ng-click="cancelEdit()" class="btn btn-primary">Cancel</button>
      </div>
    </div>
  </form>
</div>