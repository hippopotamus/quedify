<div ng-scope="getEvents">
  <h1>
    <div class="row">
      <div class="col-md-9">
        Events list
      </div>
      <div class="col-md-3 text-right"><button class="btn">Drop all events</button></div>
    </div>
  </h1>

  <ul class="list-group">
    <a ng-repeat="event in eventsList" ng-click="getEvent(event._id)">
      <li class="list-group-item">
        <h3>{!{event.title}}</h3>
        <p class="lead">{!{event.from}} &nbsp <strong>--</strong> &nbsp {!{event.to}}</p>
      </li>
    </a>
  </ul>
</div>
