<div ng-show="showForm">
  <h1>Add Meeting to Calender</h1>

  <form class="form-horizontal" ng-submit="createMeeting()">
    <div class="form-group">
      <label class="col-md-3 control-label">Title</label>
      <div class="col-md-9">
        <input type="text" class="form-control" ng-model="newMeeting.title" placeholder="What will you be doing?" >
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">From</label>
      <div class="col-md-9">
        <input type="text" class="form-control" id="newMeetingFrom" ng-model="newMeeting.from" placeholder="There is a conflict with angular picking up datepicker values">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">To</label>
      <div class="col-md-9">
        <input type="text" class="form-control" id="newMeetingTo" ng-model="newMeeting.to" placeholder="After picking a datetime, add and delete a character">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">Location</label>
      <div class="col-md-9">
        <input type="text" class="form-control" ng-model="newMeeting.location" placeholder="Where will it be?">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">Description</label>
      <div class="col-md-9">
        <input type="text" class="form-control" ng-model="newMeeting.description" placeholder="Any important details?">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3 control-label">Participants</label>
      <div class="col-md-9">
        <input type="text" class="form-control" ng-model="newMeeting.participants" placeholder="Use commas to separate participants">
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-3 col-md-9">
        <button class="btn">Submit</button>
      </div>
    </div>
  </form>
</div>
